@model rswebfaks.ViewModels.EnrollmentViewModel

@{
    ViewData["Title"] = "Edit";
}
<h1 style="position:relative; left:45%;">Change</h1>


<hr />
<div style="position:relative; left:35%;">
    <div class="col-md-4">

        <form asp-action="StudentEnrollmentEdits" enctype="multipart/form-data" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="SeminalUrl" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="SeminalUrl" class="custom-file-input" id="customFile">
                    <label class="custom-file-label" for="customFile">Choose file</label>
                </div>
            </div>

            <div class="form-group">

                <label asp-for="ProjectUrl" class="control-label"></label>

                <input asp-for="ProjectUrl" class="form-control" />

                <span asp-validation-for="ProjectUrl" class="text-danger"></span>

            </div>

            <div class="form-group" hidden>

                <select asp-for="CourseId" class="form-control" asp-items="ViewBag.CourseId"></select>

            </div>

            <div class="form-group" hidden>

                <select asp-for="StudentId" class="form-control" asp-items="ViewBag.StudentId"></select>

            </div>
            <div class="form-group">

                <input asp-for="Semester" class="form-control" type="hidden" />

                <span asp-validation-for="Semester" class="text-danger"></span>

            </div>

            <div class="form-group">

                <input asp-for="Year" class="form-control" type="hidden" />

                <span asp-validation-for="Year" class="text-danger"></span>

            </div>

            <div class="form-group">

                <input asp-for="Grade" class="form-control" type="hidden" />

                <span asp-validation-for="Grade" class="text-danger"></span>

            </div>

            <div class="form-group">

                <input asp-for="ExamPoints" class="form-control" type="hidden" />

                <span asp-validation-for="ExamPoints" class="text-danger"></span>

            </div>

            <div class="form-group">

                <input asp-for="SeminalPoints" class="form-control" type="hidden" />

                <span asp-validation-for="SeminalPoints" class="text-danger"></span>

            </div>
            <div class="form-group">

                <input asp-for="ProjectPoints" class="form-control" type="hidden" />

                <span asp-validation-for="ProjectPoints" class="text-danger"></span>

            </div>

            <div class="form-group">

                <input asp-for="AdditionalPoints" class="form-control" type="hidden" />

                <span asp-validation-for="AdditionalPoints" class="text-danger"></span>

            </div>

            <div class="form-group">

                <input asp-for="FinishDate" class="form-control" type="hidden" />

                <span asp-validation-for="FinishDate" class="text-danger"></span>

            </div>

            <div class="form-group">

                <input type="submit" value="Save" class="btn btn-primary" />

            </div>

        </form>
        <div>
            <a href="~/Student/StudentView">Back to Students</a>
        </div>
    </div>
</div>

@section scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        // Add the following code if you want the name of the file appear on select
        $(document).ready(function () {
            $(".custom-file-input").on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next(".custom-file-label").html(fileName);
            });
        })
    </script>
}