@model rswebfaks.ViewModels.EnrollmentViewModel
    ViewData["Title"] = "StudentEnrollmentEdit";
}

<h1 style="position:relative; left:45%;">Change</h1>


<hr />
<div style="position:relative; left:35%;">
    <div class="col-md-4">
        <form asp-action="StudentEnrollmentEdit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="CourseId" class="control-label" hidden>Course</label>
                <select asp-for="CourseId" class="form-control" hidden></select>
                <span asp-validation-for="CourseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentId" class="control-label" hidden>Student</label>
                <select asp-for="StudentId" class="form-control" hidden></select>
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Semester" class="control-label" hidden></label>
                <input asp-for="Semester" class="form-control" hidden />
                <span asp-validation-for="Semester" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label" hidden></label>
                <input asp-for="Year" class="form-control" hidden />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grade" class="control-label" hidden></label>
                <input asp-for="Grade" class="form-control" hidden />
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeminalUrl" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="SeminalUrl" class="custom-file-input" id="customFile">
                    <label class="custom-file-label" for="customFile">Choose file</label>
                </div>
                <span asp-validation-for="SeminalUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectUrl" class="control-label"></label>
                <input asp-for="ProjectUrl" class="form-control" />
                <span asp-validation-for="ProjectUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExamPoints" class="control-label" hidden></label>
                <input asp-for="ExamPoints" class="form-control" hidden />
                <span asp-validation-for="ExamPoints" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeminalPoints" class="control-label" hidden></label>
                <input asp-for="SeminalPoints" class="form-control" hidden />
                <span asp-validation-for="SeminalPoints" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdditionalPoints" class="control-label" hidden></label>
                <input asp-for="AdditionalPoints" class="form-control" hidden />
                <span asp-validation-for="AdditionalPoints" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FinishDate" class="control-label" hidden></label>
                <input asp-for="FinishDate" class="form-control" hidden />
                <span asp-validation-for="FinishDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a href="~/Enrollment/StudentEnrollment?SearchString=@Html.DisplayFor(model => Model.Student.FirstName)">Back to List</a>
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">

        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}  